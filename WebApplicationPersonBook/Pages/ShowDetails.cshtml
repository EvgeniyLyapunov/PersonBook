@page
@model WebApplicationPersonBook.Pages.ShowDetailsModel

@{
    ViewData["Title"] = "Show Details";
}

<div class="container backgroundWhite pt-4">
    <div class="card" style="border:1px solid #000000; ">
        <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Contact.FirstName @Model.Contact.LastName</h1>
            </div>
        </div>
        <div class="card-body bg-light p-1">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-4 p-1 fl text-center">
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Contact.Avatar))" width="70%" class="rounded" />
                    </div>

                    <div class="col-12 col-lg-8">
                        <div class="row pl-2">
                            <div class="col-12 mb-2">
                                <div class="card">
                                    <div class="card-header text-black-50 p-2 pl-4">
                                        Phone Number
                                    </div>
                                    <div class="card-body p-2 pl-4">
                                        <blockquote class="blockquote mb-0 text-black-50">
                                            <p>@Model.Contact.PhoneNumber</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row pl-2">
                            <div class="col-12 mb-2">
                                <div class="card">
                                    <div class="card-header text-black-50 p-2 pl-4">
                                        Email
                                    </div>
                                    <div class="card-body p-2 pl-4">
                                        <blockquote class="blockquote mb-0 text-black-50">
                                            <p>@Model.Contact.EMail</p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row pl-2">
                            <div class="col-12 mb-2">
                                <div class="card">
                                    <div class="card-header text-black-50 p-2 pl-4">
                                        Additional Information
                                    </div>
                                    <div class="card-body p-2 pl-4">
                                        <blockquote class="blockquote mb-0 text-black-50">
                                            @if (@Model.Contact.AdditionalInfo == null)
                                            {
                                                <p>This field is empty</p>
                                            }
                                            else
                                            {
                                                <p>@Model.Contact.AdditionalInfo</p>
                                            }
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark">
            <div class="row">
                <div class="col pb-1 pr-lg-5 pl-lg-5">
                    <a asp-area="" asp-page="/Contacts" class="btn btn-success btn-square btn-lg btn-block" style="height:50px;">Back to List</a>
                </div>
            </div>
        </div>

    </div>
</div>



