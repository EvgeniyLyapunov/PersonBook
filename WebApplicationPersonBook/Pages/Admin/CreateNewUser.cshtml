@page
@model WebApplicationPersonBook.Pages.Admin.CreateNewUserModel

@{
    ViewData["Title"] = "Create a New User";
}

<form method="post">
    <div class="container">
        <div class="card" style="border:1px solid #000000;">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>

            @if(ViewData["Message"] != null)
            {
                <p class="text-danger">@ViewData["Message"]</p>
            }

            <div class="card-body">
                <div class="form-group pr-5 pl-5 w-100">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" required class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group pr-5 pl-5 w-100">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" required class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group pr-5 pl-5 w-100">
                    <label asp-for="Input.UserRole"></label>
                    <select class="custom-select" required asp-for="Input.UserRole">
                        <option value="@AppConst.AdminRole">Admin</option>
                        <option selected value="@AppConst.UserRole">User</option>
                    </select>
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>

            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-6 text-center">
                        <button type="submit" class="btn btn-primary w-75">Create</button>
                    </div>
                    <div class="col-6 text-center">
                        <a asp-area="" asp-page="/Admin/UsersList" class="btn btn-success w-75 ">
                            <i class="fa-solid fa-arrow-right-from-bracket"></i>
                            Back
                        </a>
                    </div>
                </div>
                

            </div>

        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
